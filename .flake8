[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,D105
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores =
    tests/*:S101
    build.py:S404,D102,D103,D107,S603,S607
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
